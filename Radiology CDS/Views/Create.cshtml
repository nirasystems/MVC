@model Acr.RScanDashboard.Models.CDSOrganizationViewModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<style>
	.required:after {
		content: "*";
		font-weight: bold;
		color: red;
	}
</style>​
<div class="container">
	<div class="row centered-form">
		<div class="col-xs-12 col-sm-12 col-md-12">
			<div class="panel panel-info">
				<div class="panel-heading">
					<p class="panel-title text-center">+ CDS Organization</p>
					<div class="pull-left" style="text-align:left;margin-top:-26px;">
						@Html.ActionLink("Back to List", "Index", "CDSSites", new { @class = "btn btn-md btn-default pull-right" })
					</div>
				</div>
				<div class="panel-body">
					<div class="form-horizontal">

						@using (Html.BeginForm())
						{
							@Html.AntiForgeryToken()

							<div class="form-horizontal">

								@Html.ValidationSummary(true, "", new { @class = "text-danger" })
								<div class="form-group">
									@Html.Label("OrganizationID (NRDR)", htmlAttributes: new { @class = "control-label col-md-2 required" })
									<div class="col-md-10">
										@Html.EditorFor(model => model.OrganizationID, new { htmlAttributes = new { @class = "form-control", @min = "1", @max = "99999999999"} })
										@Html.ValidationMessageFor(model => model.OrganizationID, "", new { @class = "text-danger" })
									</div>
								</div>

								<div class="form-group">
									@Html.LabelFor(model => model.Organization, htmlAttributes: new { @class = "control-label col-md-2 required" })
									<div class="col-md-10">
										@Html.EditorFor(model => model.Organization, new { htmlAttributes = new { @class = "form-control" } })
										@Html.ValidationMessageFor(model => model.Organization, "", new { @class = "text-danger" })
									</div>
								</div>

								<div class="form-group">
									@Html.Label("NDSC Password", htmlAttributes: new { @class = "control-label col-md-2 required" })
									<div class="col-md-10">
										@Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
										@Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
									</div>
								</div>
								<div class="form-group">
									<div class="col-md-2">										

									</div>
									<div class="col-md-10">
										<p class="text-danger">@ViewBag.ErrorMessage</p>
										
									</div>
								</div>
								<div class="form-group">
									<div class="col-md-offset-6 col-md-12">
										<input type="submit" value="Create" class="btn btn-success" />
									</div>
								</div>
							</div>
						}
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

